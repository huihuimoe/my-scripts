#!/usr/bin/make -f

clean: 

build:

binary:
	make -f ../luajit2-*/Makefile install DESTDIR=$(pwd)/debian/nginx-huihui
	make -f ../lua-resty-lrucache-*/Makefile install DESTDIR=$(pwd)/debian/nginx-huihui
	make -f ../lua-resty-core-*/Makefile install DESTDIR=$(pwd)/debian/nginx-huihui
	make -f ../lua-nginx-split-clients-*/Makefile install DESTDIR=$(pwd)/debian/nginx-huihui
	make install DESTDIR=debian/nginx-huihui
	mkdir -p debian/nginx-huihui/var/lib/nginx/body
#	mkdir -p debian/nginx-huihui/etc/perl/auto/nginx
#	cp ./objs/src/http/modules/perl/blib/arch/auto/nginx/nginx.so debian/nginx-huihui/etc/perl/auto/nginx
#	cp ./objs/src/http/modules/perl/blib/lib/nginx.pm debian/nginx-huihui/etc/perl
	cp debian/files/proxy_params debian/nginx-huihui/etc/nginx
	cp debian/sed.sh . && bash sed.sh && rm sed.sh
	rm -r debian/files debian/sed.sh
	dh_link
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb