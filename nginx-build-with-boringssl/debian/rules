#!/usr/bin/make -f

clean: 

build:

binary:
	make -f ../luajit2-*/Makefile install DESTDIR=$(pwd)/debian/nginx-boringssl-huihui
	make -f ../lua-resty-lrucache-*/Makefile install DESTDIR=$(pwd)/debian/nginx-boringssl-huihui
	make -f ../lua-resty-core-*/Makefile install DESTDIR=$(pwd)/debian/nginx-boringssl-huihui
	make -f ../lua-nginx-split-clients-*/Makefile install DESTDIR=$(pwd)/debian/nginx-boringssl-huihui
	make install DESTDIR=debian/nginx-boringssl-huihui
	mkdir -p debian/nginx-boringssl-huihui/var/lib/nginx/body
	cp debian/files/proxy_params debian/nginx-boringssl-huihui/etc/nginx
	cp debian/sed.sh . && bash sed.sh && rm sed.sh
	rm -r debian/files debian/sed.sh
	dh_link
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb